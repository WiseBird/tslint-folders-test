{
  "compilerOptions": {
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "alwaysStrict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "strictBindCallApply": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,

    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "lib": [
      "es2019"
    ],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],

    "incremental": true
  },
  "exclude": [
    "node_modules"
  ]
}